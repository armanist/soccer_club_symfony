{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
    <div class="col-lg-12">

        <div class="row col-lg-12 d-flex justify-content-between mx-0 py-2">
            <div class="col-lg-6">
                <label>Team to buy from</label>
                <select class="form-select select-team" aria-label="Default select example">
                    <option selected value="">Team to buy from</option>
                    {% for item in teams %}
                        <option class="from" value="{{ item.id }}">{{ item.name }} ($ {{ item.balance }})</option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-lg-6">
                <label>Team to buy for</label>
                    <select class="form-select buy-to" aria-label="Default select example" disabled>
                        <option class="row" selected value="{{ team.id }}">{{ team.name }} ($ {{ team.balance }})
                        </option>
                    </select>

            </div>

            <div class="for-players">
                <ul class="list-group ">

                </ul>
            </div>

            <div class="d-flex justify-content-end mt-5">
                <a href="/teams" class="btn bg-primary">Back to teams page</a>
            </div>
        </div>
    </div>

{% endblock %}